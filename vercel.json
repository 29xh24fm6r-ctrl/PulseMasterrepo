{
  "redirects": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "pulselifeos.com" }],
      "destination": "https://www.pulselifeos.com/$1",
      "permanent": true
    }
  ],
  "crons": [
    {
      "path": "/api/cron/executions",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/daily-canary?secret=${CRON_SECRET}",
      "schedule": "15 13 * * *"
    },
    {
      "path": "/api/cron/inbox-process/run?secret=${CRON_SECRET}",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/activity-rollup?token=${CRON_SECRET}",
      "schedule": "*/15 * * * *"
    }
  ]
}